# -----------------------------
# Flask
# -----------------------------
FLASK_SECRET_KEY=

# -----------------------------
# Database (Supabase PostgreSQL)
# -----------------------------
# From Supabase: Settings → Database → Connection string (URI).
# On Render, add this as an env var. sslmode=require is added automatically for Supabase.
DATABASE_URL=

# -----------------------------
# Firebase
# -----------------------------
# Firebase Project ID
FIREBASE_PROJECT_ID=

# Option A (Production / Render)
# Paste the FULL Firebase service account JSON here
FIREBASE_SERVICE_ACCOUNT_JSON=

# Option B (Local development only)
# Path to firebase service account JSON file
FIREBASE_CREDENTIALS_PATH=
